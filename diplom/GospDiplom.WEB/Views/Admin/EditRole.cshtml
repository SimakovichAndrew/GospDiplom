

@using (Html.BeginForm("EditRole", "Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-10">
            @Html.Label("Login", htmlAttributes: (new { @class = "control-label col-md-2" }))
            @*@Html.Editor("Text-Box", "name")*@
            <input type="text" name="name" value="name" />
        </div>
        <div class="col-md-10">
            @Html.Label("Role", htmlAttributes: (new { @class = "control-label col-md-2" }))
            @*@Html.Editor("Text-Box", "role")*@
            <input type="text" name="role" value="role" />
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="button" value="добавить" class="btn btn-default" />
            </div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="button" value="удалить" class="btn btn-default" />
            </div>
        </div>
    </div>

}
