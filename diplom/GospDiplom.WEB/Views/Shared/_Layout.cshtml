
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>База киосков Гомельского филиала "Белсоюзпечать"</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        /* Some custom styles to beautify this example */
        .demo-content {
            padding: 15px;
            font-size: 18px;
            min-height: 300px;
            background: #dbdfe5;
            margin-bottom: 10px;
        }

            .demo-content.bg-alt {
                background: #abb1b8;
            }
    </style>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Script/bootstrap")
</head>
<body>
    <!-- Open the output in a new blank tab (Click the arrow next to "Show Output" button) and resize the browser window to understand how the Bootstrap responsive grid system works. -->
    <div class="container-fluid">
        <!--Row with three equal columns-->
        <div class="row justify-content-between">
            <div class="col-md-4 col-lg-3">
                @*<div class="demo-content">.col-sm-4</div>*@
                <div class="navbar navbar-inverse navbar-fixed-top">
                    <div class="container">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink("Начальная", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                        </div>
                        <div class="navbar-collapse collapse">
                            <ul class="nav navbar-nav">
                                <li>@Html.ActionLink("Домашняя страница", "Index", "Home")</li>
                                <li>@Html.ActionLink("О программе", "About", "Home")</li>
                                <li>@Html.ActionLink("Контакт", "Contact", "Home")</li>
                            </ul>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-md-8 col-lg-6">
                @*<div class="demo-content bg-alt">.col-sm-4</div>*@
                <div class="row"> <h2>База киосков ГомельОблСоюзПечать</h2></div>
            </div>
            <div class="col-md-12 col-lg-3">
                @*<div class="demo-content">.col-sm-4</div>*@
                <ul>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Войти", "Login", "Account")</li>
                        <li>@Html.ActionLink("Регистрация", "Register", "Account")</li>
                    }
                    else
                    {
                        <li style="color:lightgray;">
                            <a>@Html.ViewBag.Greeting  @User.Identity.Name</a>
                        </li>
                        <li>@Html.ActionLink("Выход", "Logout", "Account")</li>
                    }
                </ul>
            </div>
        </div>
        <hr>
        <!--Row with three columns divided in 1:4:1 ratio-->
        <div class="row">
            <div id="categories" class="col-md-3 col-lg-2">
                @*<div class="demo-content">.col-sm-2</div>*@
                
                @{ Html.RenderAction("Menu", "Nav"); }
                
            </div>
            <div class="col-md-9 col-lg-9">
                @RenderBody()
                @*<div class="demo-content bg-alt">.col-sm-8</div>*@
            </div>
            <div class="col-md-12 col-lg-1">
                <div class="demo-content">.col-sm-2</div>
            </div>
        </div>
        <hr>
        <!--Row with three columns divided unevenly-->
        <footer>
            <div class="row">
                <div class="col">
                    <div class="demo-content">.col-sm-3</div>
                </div>
                <div class="col">
                    <div class="demo-content bg-alt">.col-sm-7</div>
                </div>
                <div class="col">
                    <div class="demo-content">.col-sm-2</div>
                </div>
            </div>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Html.ActionLink("Домашняя страница", "Index", "Home")
    @RenderSection("scripts", required: false)
</body>
</html>                                		                            