    <div class="container body-content">
        <hr />
       @using (Html.BeginForm("IndicationTemp", "SchetchikInput", FormMethod.Post))
        {
            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">Введите номер киоска и месяц показаний</span>
                </div>
                <input type="text" name="Nomer" value="0" aria-label="First name" class="form-control" />
                @Html.DropDownList("month", new SelectList(new string[] { "", "январь", "февраль", "март", "апрель", "май", "июнь", "июль", "август", "сентябрь", "октябрь", "ноябрь", "декабрь" }))
            </div>
            <div>
                <!-- Default inline 1-->
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" value="1" id="defaultInline1" name="checkSort">
                    <label class="custom-control-label" for="defaultInline1">по номеру киоска</label>
                </div>

                <!-- Default inline 2-->
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" value="2" id="defaultInline2" name="checkSort">
                    <label class="custom-control-label" for="defaultInline2">по месяцу</label>
                </div>

                <!-- Default inline 3-->
                <div class="custom-control custom-radio custom-control-inline">
                    <input type="radio" class="custom-control-input" value="3" id="defaultInline3" name="checkSort">
                    <label class="custom-control-label" for="defaultInline3">по потреблению</label>
                </div>
            </div>

            <button type="submit" value="показать" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">
                показать
            </button>
        }

        <hr />
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year – разработка Симакович</p>
            @*<p>@Html.ActionLink("Ввод показаний", "Index", "SchetchikInput")</p>*@
        </footer>
    </div>

