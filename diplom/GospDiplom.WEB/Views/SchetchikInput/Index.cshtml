@model GospDiplom.WEB.Models.SchetchikViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Таблица показаний</title>
    <meta charset="utf-8" />
    <style type="text/css">
        body {
            background-color: beige;
            font-family: Verdana, Arial;
            margin: 50px;
        }

        form {
            padding: 10px;
            border-style: solid;
            width: 250px;
        }
    </style>
</head>
<body>

    <hr />
    <div>
        <p>введите месяц и номер киоска и нажмите <strong>ПОКАЗАТЬ</strong>.</p>
        @using (Html.BeginForm("IndicationTemp", "SchetchikInput", FormMethod.Post))
        {
            <div>
                <label for= "text1" > Номер киоска:</label >
                <input type = "text" name = "Nomer" />
                &harr;
                <label for= "text2" > Месяц:</label >
                <input type = "text" name = "Month" />
            </div>
            <p><input type = "submit" value = "Показать" /></p>

        }
    </div>
        <hr />

        @Html.Partial("IndicationMonth")

        <hr />
        <table>
            <tr>
                <td>Номер киоска </td>
                <td> Номер счетчика</td>
                <td> Модель счетчика</td>
                <td>Тариф 1 </td>
                <td>Тариф 2 </td>
                <td>Месяц</td>
                <td> Двух тарифный</td>
                <td>Тех учет </td>
                <td> Организация</td>
                <td>Договор </td>
            </tr>
            @foreach (var item in Model.AllCounters)
            {
                <tr>
                    <td> @Html.DisplayFor(modelItem => item.NomerKioska)</td>

                    <td> @Html.DisplayFor(modelItem => item.NomerCounter)</td>

                    <td> @Html.DisplayFor(modelItem => item.ModelCounter)</td>

                    <td> @Html.DisplayFor(modelItem => item.Tarif1)</td>

                    <td> @Html.DisplayFor(modelItem => item.Tarif2)</td>

                    <td> @Html.DisplayFor(modelitem => item.Month) </td>

                    <td> @Html.DisplayFor(modelItem => item.TwoTarif)</td>

                    <td> @Html.DisplayFor(modelItem => item.TechUchet)</td>

                    <td> @Html.DisplayFor(modelItem => item.OrgName)</td>

                    <td>@Html.DisplayFor(modelItem => item.Dogovor)</td>
                </tr>
            }
        </table>
        <hr />


        <div class="pager">
            @Html.PageLinks(Model.PagingInfoCom, x => Url.Action("Index", new { page = x }))
            @*@Html.PageLinks(Model.First().PagingInfoCom, x => Url.Action("Chat", new { page = x, category = Model.CurrentTopicName }))*@
        </div>
</body>
</html>

